<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="filter">
        <field
                name="date"
                type="calendar"
                label="Select a date"
                description=""
                class="input-medium"
                filter="user_utc"
                showtime="false"
                todaybutton="false"
                translateformat="true"
        />

        <field
                name="date_valid_until"
                type="calendar"
                label="Select roll validity date"
                description=""
                class="input-medium"
                filter="user_utc"
                showtime="false"
                todaybutton="false"
                translateformat="true"
        />

        <field name="roll" type="list" label="Select a Roll Type" description="">
            <option value="">All</option>
            <option value="Day Rolls">Day Rolls</option>
            <option value="Opposed Motion Roll">Opposed Motion Roll</option>
            <option value="Unopposed Motion Roll">Unopposed Motion Roll</option>
            <option value="Urgent Court Rolls">Urgent Court Rolls</option>
            <option value="Interlocutory Applications">Interlocutory Applications</option>
            <option value="Judicial Management Meetings">Judicial Management Meetings</option>
            <option value="Directives">Directives</option>
        </field>

        <field name="description" type="text" default="" label="Enter some a description" description="" size="10"/>

        <field name="judge" type="text" default="" label="Select a Judge" description="" />
    </fieldset>
</form>